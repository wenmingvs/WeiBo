<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_home_unlogin" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/homeview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/visitordiscover_feed_image_house" />

            <ImageView
                android:id="@+id/circleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/visitordiscover_feed_image_smallicon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/homeview"
                android:background="#f2f2f2" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/register"
                android:layout_width="140dp"
                android:layout_height="42dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/unlogin_register_corners_bg"
                android:gravity="center"
                android:onClick="openLoginWebView"
                android:clickable="true"
                android:text="注册"
                android:textColor="#f18312" />

            <TextView
                android:id="@+id/login"
                android:layout_width="140dp"
                android:layout_height="42dp"
                android:background="@drawable/unlogin_register_corners_bg"
                android:clickable="true"
                android:gravity="center"
                android:onClick="openLoginWebView"
                android:text="登录"
                android:textColor="#777777" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

