<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timeline_origin_pictext_container_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/timeline_feedcard_retweet_background_auto"
    android:clickable="true"
    android:orientation="vertical">

    <include layout="@layout/common_status_topbar" />

    <com.wenming.weiswift.widget.emojitextview.EmojiTextView
        android:id="@+id/timeline_origin_pictext_etv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/home_weiboitem_marginleftright"
        android:layout_marginRight="@dimen/home_weiboitem_marginleftright"
        android:layout_marginTop="8dp"
        tools:text="\@飞常准 :  【网曝：首都机场有人带枪上飞机】 据“停机坪”公众号1月4日发布的消息，有网友报料称，有乘客把看似是玩具或道具“手枪”带上了飞机。并在机舱里拿着枪摆各种姿势合影。事件发生的地点在北京首都机场的一架飞机上。"
        android:lineSpacingExtra="@dimen/home_original_weiboitem_linespace"
        android:textColor="@color/home_original_weiboitem_font"
        android:textSize="@dimen/home_original_weiboitem_font" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/timeline_origin_pictext_rlv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:paddingBottom="10dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e5e5e5" />

    <include layout="@layout/common_status_bottombar" />
</LinearLayout>


